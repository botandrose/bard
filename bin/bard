#!/usr/bin/env ruby
# -*- mode: ruby -*-

require 'rubygems'
require 'thor'
require 'thor/runner'

THIS_FILE = File.symlink?(__FILE__) ? File.readlink(__FILE__) : __FILE__
require File.join(File.dirname(THIS_FILE), '..', 'lib', 'bard')

args = ARGV
if args[0] =~ /^[a-z]/i
  args[0] = "bard:#{args[0]}"
else
  args.unshift "bard"
end
Thor::Runner.start args 
